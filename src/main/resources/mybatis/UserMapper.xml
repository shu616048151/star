<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shu.star.mapper.UserMapper">


    <resultMap id="getUser" type="com.shu.star.model.User">
        <id column="id" property="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="height" column="height"/>
        <result property="address" column="address"/>
        <result property="point" column="point"/>
        <result property="userType" column="user_type"/>
        <result property="addressType" column="address_type"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>
    <select id="getUserById" parameterType="integer" resultMap="getUser">
        select *  from user  where id=#{0} and is_deleted=0;
    </select>

    <insert id="addUser" parameterType="com.shu.star.model.User" useGeneratedKeys="true" keyProperty="id">
        insert into user(user_name,password,name,gender,age,height,address,weight,point,status,user_type,address_type,create_time,update_time,is_deleted)
        values(#{userName},#{password},#{name},#{gender},#{age},#{height},#{address},#{weight},#{point},#{status},#{userType},#{addressType},#{createTime},#{updateTime},#{isDeleted})
    </insert>

    <insert id="addStarItem" parameterType="com.shu.star.model.User" useGeneratedKeys="true" keyProperty="id">
        insert into star_item(user_id,star_type,is_deleted)
        values(#{userId},#{starType},0)
    </insert>

    <insert id="addUserFile" parameterType="com.shu.star.model.User" useGeneratedKeys="true" keyProperty="id">
        insert into user_file(user_id,url,is_deleted)
        values(#{userId},#{url},0)
    </insert>


    <select id="login"  resultMap="getUser">
        select * from user where user_name=#{userName} and password=#{password} and is_deleted=0
    </select>

    <select id="getUserList"  resultMap="getUser">
        select * from user
        <where>
            <if test="addressType != null"> and address_type=#{addressType}</if>
        </where>
    </select>


    <select id="getUserListByMap" parameterType="hashmap"  resultMap="getUser">
        select distinct u.* from user u,star_item si
        <where>
            <if test="1==1">u.id=si.user_id</if>
            <if test="addressType != null"> and address_type=#{addressType}</if>
            <if test="starType != null"> and si.star_type=#{starType}</if>
        </where>
        limit #{firstIndex},#{size}
    </select>

</mapper>